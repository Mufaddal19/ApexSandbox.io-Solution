public Integer nextPrime(Integer num) {
    //code here
    Boolean isPrime = false;
    if(num < 2){
        return 2;
    }


    do{
        for(Integer i = 2; i < num + 1 ; i++){
            if(Math.mod(num+1,i) == 0){
                num++;
                isPrime = false;
                break;
            }
            else{
                isPrime = true;
            }
        }      
    }
    while(isPrime == false);
    return num + 1;
}