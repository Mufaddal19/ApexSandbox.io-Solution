public Map<String, List<Case>> casesByType(List<Case> cases) {
    //code here
    Map<String,List<Case>> typeToCaseListMap = new Map<String,List<Case>>();
    List<Case> caseList = new List<Case>();
    if(!cases.isEmpty()){
        for(Case c : cases){
            if(c.Type != null && typeToCaseListMap.containsKey(c.Type)){
                typeToCaseListMap.put(c.Type, typeToCaseListMap.get(c.Type).add(c));
            }
            else{
                typeToCaseListMap.put(c.Type,new List<Case>{c});
            }
        }
    }
    return typeToCaseListMap;
}