public Boolean isPalindrome(String str){
    //code here
    String lowStr = str.toLowerCase().deleteWhiteSpace();
    Pattern nonAlphanumeric = Pattern.compile('[^a-zA-Z0-9]');
    Matcher matcher = nonAlphanumeric.matcher(lowStr);
    String checkStr = matcher.replaceAll('');
    Integer i,j;
    for( i=0 , j=checkStr.length()-1; i == j + 1 ; i++, j--){
        if(checkStr.charAt(i) == checkStr.charAt(j)){
            continue;
        }
        else{
            return false;
        }
    }
    return true;
}    